{
  "compilerOptions": {
    "outDir": "dist/cjs",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@semantic-api/api": [
        "./packages/api"
      ],
      "@semantic-api/api/*": [
        "./packages/api/*"
      ],
      "@semantic-api/common": [
        "./packages/common"
      ],
      "@semantic-api/system": [
        "./packages/system"
      ],
      "@semantic-api/system/*": [
        "./packages/system/*"
      ],
      "@semantic-api/types": [
        "./packages/types"
      ]
    }
  },
  "exclude": [
    "examples",
    "packages/common"
  ]
}
