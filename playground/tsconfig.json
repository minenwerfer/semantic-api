{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@semantic-api/api": [
        "../packages/api/dist"
      ],
      "@semantic-api/api/*": [
        "../packages/api/dist/*"
      ],
      "@semantic-api/access-control": [
        "../packages/access-control/dist"
      ],
      "@semantic-api/common": [
        "../packages/common/dist"
      ],
      "@semantic-api/server": [
        "../packages/server/dist"
      ],
      "@semantic-api/system": [
        "../packages/system/dist"
      ],
      "@semantic-api/system/*": [
        "../packages/system/dist/*"
      ],
      "@semantic-api/types": [
        "../packages/types/dist"
      ]
    }
  }
}
