{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@semantic-api/api": [
        "../dist/staging/api"
      ],
      "@semantic-api/api/*": [
        "../dist/staging/api/*"
      ],
      "@semantic-api/common": [
        "../dist/staging/common"
      ],
      "@semantic-api/system/*": [
        "../dist/staging/system/*"
      ],
      "@semantic-api/types": [
        "../dist/staging/types"
      ]
    }
  }
}
