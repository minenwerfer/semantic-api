{
  "compilerOptions": {
    "outDir": "dist/staging",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@semantic-api/api": [
        "./packages/api"
      ],
      "@semantic-api/api/*": [
        "./packages/api/*"
      ],
      "@semantic-api/common": [
        "./packages/common"
      ],
      "@semantic-api/system/*": [
        "./packages/system/*"
      ],
      "@semantic-api/types": [
        "./packages/types"
      ]
    }
  },
  "include": [
    "packages/api/**/*",
    "packages/api/package.json",
    "packages/system/**/*",
    "packages/system/package.json",
    "packages/types/**/*",
    "packages/types/package.json",
    "packages/common/**/*",
    "packages/common/package.json"
  ],
  "exclude": [
    "examples",
    "playground"
  ]
}
