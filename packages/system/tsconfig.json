{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@semantic-api/api": [
        "../api/dist"
      ],
      "@semantic-api/common": [
        "../common/dist"
      ],
      "@semantic-api/system/*": [
        "../dist/staging/system/*"
      ],
      "@semantic-api/types": [
        "../types/dist"
      ]
    }
  }   
}
