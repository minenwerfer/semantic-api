{
  "compilerOptions": {
    "outDir": "dist/esm",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@semantic-api/api": ["./packages/api"],
      "@semantic-api/common": ["./packages/common"],
      "@semantic-api/system/*": ["./packages/system/*"]
    }
  },
  "include": [
    "packages/common"
  ]
}
